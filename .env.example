# Nova VTU Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# DJANGO SETTINGS
# =============================================================================

# Generate a secure key for production: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here

# Set to False in production
DEBUG=True

# Comma-separated list of allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1

# CSRF Trusted Origins (required for HTTPS in production)
# Include your domain with https:// prefix
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# =============================================================================
# DATABASE (Optional - defaults to SQLite)
# =============================================================================

# PostgreSQL connection (Neon, Supabase, or local)
# Format: postgres://user:password@host:5432/database?sslmode=require
# Example for Neon:
DATABASE_URL=postgresql://username:password@ep-xxxxx.us-east-2.aws.neon.tech/nova_vtu?sslmode=require

# =============================================================================
# PAYSTACK PAYMENT GATEWAY
# =============================================================================

# Get keys from https://dashboard.paystack.com/#/settings/developers
# Use sk_test_* and pk_test_* for sandbox
# Use sk_live_* and pk_live_* for production

PAYSTACK_SECRET_KEY=sk_test_your_secret_key_here
PAYSTACK_PUBLIC_KEY=pk_test_your_public_key_here

# =============================================================================
# VTPASS VTU PROVIDER
# =============================================================================

# Get credentials from https://vtpass.com
# Sandbox: https://sandbox.vtpass.com/api
# Production: https://vtpass.com/api

VTPASS_BASE_URL=https://sandbox.vtpass.com/api
VTPASS_API_KEY=your_vtpass_api_key_here
VTPASS_SECRET_KEY=SK_your_vtpass_secret_key_here
VTPASS_PUBLIC_KEY=PK_your_vtpass_public_key_here

# =============================================================================
# EMAIL CONFIGURATION (Resend)
# =============================================================================

# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_your_api_key_here

# Sender email (must be from a verified domain in Resend)
DEFAULT_FROM_EMAIL=Your App <noreply@yourdomain.com>

# =============================================================================
# WEBHOOK CONFIGURATION (Development)
# =============================================================================

# For local development, use ngrok to expose your localhost
# ngrok http 8000
# Then add your ngrok URL to ALLOWED_HOSTS

# NGROK_URL=https://your-ngrok-url.ngrok-free.app

# =============================================================================
# OPTIONAL SETTINGS
# =============================================================================

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# LOG_LEVEL=INFO

# Timezone (default: Africa/Lagos)
# TIMEZONE=Africa/Lagos
